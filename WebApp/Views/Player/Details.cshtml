@model WebApp.Models.Player

@{
    ViewBag.Title = Model.Name;
}

<h2>@ViewBag.Title</h2>

<div>
    <h4>Игрок</h4>
    <hr />
    <div class="form-group">
        <div class="row gap">
            <div class="col-xs-7">
                <div class="row gap">
                    <div class="col-xs-4">
                        @Html.LabelFor(x => x.Name)
                    </div>
                    <div class="col-xs-3">
                        @Model.Name
                        @Html.ValidationMessageFor(x => x.Name)
                    </div>
                </div>
                <div class="row gap">
                    <div class="col-xs-4">
                        @Html.LabelFor(x => x.BirthDate)
                    </div>
                    <div class="col-xs-3">
                        @Model.BirthDate.ToShortDateString()
                    </div>
                </div>
                <div class="row gap">
                    <div class="col-xs-4">
                        @Html.LabelFor(x => x.Nationality)
                    </div>
                    <div class="col-xs-3">
                        @Model.Nationality
                    </div>

                </div>
                <div class="row gap">
                    <div class="col-xs-4">
                        @Html.LabelFor(x => x.Biography)
                    </div>
                    <div class="col-xs-3">
                        @Model.Biography
                    </div>
                </div>
                @for (int i = 0; i < Model.Properties.Count; i++)
                {
                    <div class="row gap">
                        <div class="col-xs-4">
                            <label>@Model.Properties[i].PlayerPropertyType.Name</label>
                        </div>
                        <div class="col-xs-3">
                            @Model.Properties[i].Value
                        </div>
                    </div>
                }
            </div>
            <div class="col-xs-5">
                <img src="@Model.ImageUrl" class="img-responsive" />
            </div>
        </div>
    </div>

</div>
<p>
    @if (User.IsInRole("Admin") || User.IsInRole("Editor"))
    {
        @Html.ActionLink("Редактировать", "Edit", new { id = Model.Id }, new { @class = "btn btn-sm btn-primary" }) @(" ");
    }
    @Html.ActionLink("К игрокам", "Index", new { sportId = Model.SportId }, new { @class = "btn btn-sm btn-default" })
</p>
