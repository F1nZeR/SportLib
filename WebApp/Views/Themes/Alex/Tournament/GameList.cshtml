@model List<WebApp.Models.Game>
<div class="box">
    <table class="stat-table" cellpadding="0" cellspacing="0">
        <colgroup>
            <col width="100">
            <col width="80">
            <col width="100">
        </colgroup>
        <thead>
            <tr>
                <th>
                    Дата
                </th>
                <th>
                    Место
                </th>
                <th>
                    Описание
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach(var item in Model)
            {
                <tr>
                    <td> @Html.ActionLink(item.Date.ToShortDateString(), "Details", "Game", new { id = item.Id }, new { }) </td>
                    <td> @item.Place </td>
                    <td> @item.Description </td>
                </tr>    
            }
        </tbody>
    </table>
</div>
