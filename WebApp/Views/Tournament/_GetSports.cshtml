@model List<WebApp.Models.Sport>

<li class="dropdown">
    <a href="#" class="dropdown-toggle" data-toggle="dropdown">Турниры <b class="caret"></b></a>
    <ul class="dropdown-menu">
        @foreach (var sport in Model)
        {
            <li>@Html.ActionLink(sport.Name, "Index", "Tournament", new{sportId = sport.Id}, null)</li>
        }
    </ul>
</li>